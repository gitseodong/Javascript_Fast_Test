// Math.abs()
// 숫자의 절대값을 반환함.

console.log(Math.abs(2)); // 2
console.log(Math.abs(-2)); // 2
console.log(Math.abs(-2.1)); // 2.1

// Math.ceil()
// 주어진 숫자를 올림해 정수를 반환함.

console.log(Math.ceil(3.14)); // 4

// Math.floor()
// 주어진 숫자를 내림해 정수를 반환함.

console.log(Math.floor(3.14)); // 3

// Math.max()
// 주어진 숫자 중 가장 큰 숫자를 반환함.

console.log(Math.max(1, 22, 38, 10)); // 38
let arr = [1, 22, 38, 10];
console.log(Math.max(...arr)); // 38

// Math.min()
// 주어진 숫자 중 가장 작은 숫자를 반환함.
console.log(Math.min(1, -22, 38, 10)); // -22
arr = [1, -22, 38, 10];
console.log(Math.min(...arr)); // -22

// Math.pow()
// 주어진 숫자의 거듭제곱한 값을 반환함.

console.log(Math.pow(4, 2)); // 16
console.log(Math.pow(7, 2)); // 49
console.log(Math.pow(2, 10)); // 1024
console.log(Math.pow(2, 0.5)); // 1.4142135623730951
console.log(Math.pow(2, -2)); // 0.25

// Math.random()
// 숫자 0 이상, 1 미만의 난수를 반환함.

function random(min = 0, max = 10) {
  return Math.floor(Math.random() * (max - min) + min);
}
console.log(Math.random()); // 0.8706265021229167
console.log(random(100, 1000)); // 644

// Math.round()
// 주어진 숫자를 반올림해 정수를 반환함.

let num1 = 3.141;
let num2 = 3.768;

console.log(Math.round(num1)); // 3
console.log(Math.round(num2)); // 4
