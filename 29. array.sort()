let arr = ['사과', '바나나', '파인애플', '애플망고', '체리', '오렌지', '귤'];
arr.sort(compare2);
console.log(arr);

function compare(a, b) { // 오름차순 : return a-b; 를 하면 된다.
  if (a < b) return -1;
  else if (a > b) return 1;
  else return 0;
}

function compare2(a, b) { // 내림차순 : return b-a; 를 하면 된다.
  if (a > b) return -1;
  else if (a < b) return 1;
  else return 0;
}
